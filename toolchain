set(CMAKE_SYSTEM_NAME Linux)
set(CMAKE_SYSTEM_PROCESSOR arm)
set(TOOLCHAIN_PREFIX arm-linux-gnueabihf)

set(CMAKE_C_COMPILER   /gcc-linaro-7.5.0-2019.12-x86_64_arm-linux-gnueabihf/bin/${TOOLCHAIN_PREFIX}-gcc CACHE FILEPATH "C compiler")
set(CMAKE_CXX_COMPILER /gcc-linaro-7.5.0-2019.12-x86_64_arm-linux-gnueabihf/bin/${TOOLCHAIN_PREFIX}-g++ CACHE FILEPATH "CXX compiler")
set(CMAKE_AR /gcc-linaro-7.5.0-2019.12-x86_64_arm-linux-gnueabihf/bin/arm-linux-gnueabihf-ar CACHE FILEPATH "Archiver")
set(CMAKE_STRIP /gcc-linaro-7.5.0-2019.12-x86_64_arm-linux-gnueabihf/bin/arm-linux-gnueabihf-strip FILEPATH "Diet Cola")

#set(CMAKE_FIND_ROOT_PATH /usr /lib /usr/lib /usr/include /gcc-linaro-7.5.0-2019.12-x86_64_arm-linux-gnueabihf/${TOOLCHAIN_PREFIX} /gcc-linaro-7.5.0-2019.12-x86_64_arm-linux-gnueabihf/lib/${TOOLCHAIN_PREFIX})

set(CMAKE_FIND_ROOT_PATH /arm32 /arm32/lib /arm32/usr /arm32/usr/lib /arm32/usr/include)
#set(CMAKE_SYSROOT /arm32)
#set(CMAKE_SYSROOT /gcc-linaro-7.5.0-2019.12-x86_64_arm-linux-gnueabihf/arm-linux-gnueabihf)
set(ENV{PKG_CONFIG_PATH} "/arm32/usr/lib/pkgconfig/")

set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
#set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY BOTH)
#set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE BOTH)
#set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE BOTH)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)

include_directories(/arm32 /arm32/usr /arm32/usr/include)
link_directories(/arm32 /arm32/lib /arm32/usr/lib)
#SET(ENV{LD_LIBRARY_PATH} "/arm32:/arm32/lib:/arm32/usr/lib:$ENV{LD_LIBRARY_PATH}")
